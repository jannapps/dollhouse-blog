<!-- Use the same container styling as the main site -->
<div class="container layout-two-column">
  <main class="main-content">
    <%= styled_content(@content) %>
  </main>
  
  <aside class="sidebar">
    <% if @widget_config["sidebar"] %>
      <%= render_widgets(@widget_config["sidebar"]) %>
    <% end %>
  </aside>
</div>

<style>
.layout-two-column {
  display: grid;
  grid-template-columns: 1fr 350px;
  gap: 1.5rem;
  /* Remove conflicting styles, inherit from .container */
}

.main-content {
  /* Content inherits all the beautiful typography from application.css */
  max-width: 100%;
  overflow-wrap: break-word;
  min-width: 0;
}

.sidebar {
  padding-left: 2rem;
  border-left: 2px solid rgba(52, 152, 219, 0.2);
  margin-left: 1rem;
}

@media (max-width: 768px) {
  .layout-two-column {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .sidebar {
    border-left: none;
    border-top: 2px solid rgba(52, 152, 219, 0.2);
    padding-left: 0;
    padding-top: 1.5rem;
    margin-left: 0;
    margin-top: 1rem;
  }
}
</style>